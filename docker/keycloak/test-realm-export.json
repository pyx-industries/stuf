{
  "realm": "stuf",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "requiredCredentials": [ "password" ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role with full access to all collections"
      },
      {
        "name": "trust-architect",
        "description": "Trust architect role for managing collections and users"
      },
      {
        "name": "project-participant",
        "description": "Basic project participant role"
      }
    ]
  },
  "clientScopes": [
    {
      "name": "stuf:access",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "false"
      },
      "protocolMappers": [
        {
          "name": "collections",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "collections",
            "claim.name": "collections",
            "jsonType.label": "JSON",
            "access.token.claim": "true",
            "id.token.claim": "true"
          }
        },
        {
          "name": "stuf-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "stuf-api",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clients": [
    {
      "clientId": "stuf-spa",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email",
        "stuf:access"
      ]
    },
    {
      "clientId": "stuf-api",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "some-secret-value",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "attributes": {
        "token.endpoint.auth.signing.alg": "RS256",
        "introspection.response.audience.enabled": "true"
      },
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email",
        "stuf:access"
      ]
    }
  ],
