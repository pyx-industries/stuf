{
  "realm": "${KEYCLOAK_REALM}",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "requiredCredentials": [ "password" ],
  "roles": {
    "realm": [
      {
        "name": "${KEYCLOAK_ADMIN_ROLE}",
        "description": "Administrator role with full access to all collections"
      }
    ]
  },
  "clientScopes": [
    {
      "name": "stuf:access",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "false"
      },
      "protocolMappers": [
        {
          "name": "collections",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "collections",
            "claim.name": "collections",
            "jsonType.label": "JSON",
            "access.token.claim": "true",
            "id.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clients": [
    {
      "clientId": "${KEYCLOAK_SPA_CLIENT_ID}",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"],
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email",
        "stuf:access"
      ]
    },
    {
      "clientId": "${KEYCLOAK_API_CLIENT_ID}",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "${KEYCLOAK_API_CLIENT_SECRET}",
      "serviceAccountsEnabled": true,
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email",
        "stuf:access"
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["${KEYCLOAK_ADMIN_ROLE}"]
    },
    {
      "username": "user",
      "enabled": true,
      "email": "user@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "attributes": {
        "collections": [
          "{\"collection-1-docs\":[\"read\",\"write\"],\"collection-2-contracts\":[\"read\"],\"collection-3-cat-pics\":[\"read\",\"write\",\"delete\"]}"
        ]
      }
    }
  ]
}
