{
  "realm": "${KEYCLOAK_REALM}",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "requiredCredentials": [ "password" ],
  "roles": {
    "realm": [
      {
        "name": "${KEYCLOAK_ADMIN_ROLE}",
        "description": "Administrator role with full access to all collections"
      }
    ]
  },
  "clients": [
    {
      "clientId": "${KEYCLOAK_SPA_CLIENT_ID}",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"]
    },
    {
      "clientId": "${KEYCLOAK_API_CLIENT_ID}",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "${KEYCLOAK_API_CLIENT_SECRET}",
      "serviceAccountsEnabled": true
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["${KEYCLOAK_ADMIN_ROLE}"]
    },
    {
      "username": "user",
      "enabled": true,
      "email": "user@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ]
    }
  ]
}
